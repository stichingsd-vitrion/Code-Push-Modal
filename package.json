{
  "name": "@vitrion/sentry-code-push-modal",
  "version": "1.0.28",
  "description": "A wrapper around CodePush with integration with Sentry, custom modal for sync, multiple extra features, and i18n integration.",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "release": "node ./scripts/codepush-release.js",
    "update": "node ./scripts/codepush-update.js",
    "publish": "npm run build && npm publish --access public",
    "prepare": "npm run build",
    "clean": "rimraf dist",
    "tscBuild": "tsc --build",
    "build": "npm run clean && npm run tscBuild",
    "lint": "eslint 'src/**/*.{js,ts,jsx,tsx}' --quiet --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "files": [
    "dist",
    "scripts"
  ],
  "peerDependencies": {
    "@sentry/react-native": ">=4.14.0",
    "react-i18next": "^12.0.0",
    "react": "^16.8.0 || ^17.0.1 || ^18.0.0",
    "react-native": ">=0.70.0",
    "react-native-code-push": ">=8.0.0",
    "immer": ">=2.0.0",
    "use-immer": ">=0.8.0"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.2.0",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.0",
    "rollup": "^2.79.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stichingsd-vitrion/Sentry-Code-Push-Modal.git"
  }
}
