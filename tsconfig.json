{
  "compilerOptions": {
    "jsx": "react",
    "declaration": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "node"
    ],
    "outDir": "dist",
    "resolveJsonModule": true,
    "declarationDir": "dist/types"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
